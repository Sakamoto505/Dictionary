<h1><%= t("search.translation") %></h1>

<turbo-frame id="search_results">

<%= form_tag(search_words_path, method: :get) do %>
  <%= label_tag :q, t("search.label_tag") %>
  <%= text_field_tag :q, params[:q], placeholder: "Найти слово или перевод" %>
    <button data-controller="language-toggle" data-action="click->language-toggle#toggleLanguage">
      Toggle Language
    </button>
  <%= select_tag(:language, options_for_select(['ingush', 'russian'], params[:language] || "ingush")) %>
  <%= submit_tag t("search.search") %>
<% end %>

<%= render partial: 'shared/words_results', locals: { words_results: words_results, pagy: pagy } %>
</turbo-frame>
