
<turbo-frame id="words_results">
  <% if words_results.present? && words_results.any? %>
    <h2><%= t("search.found") %> <%= words_results.count %> :</h2>
    <ul>
      <% words_results.each do |word| %>
      <li><%= "#{word.ingush_word} - #{word.russian_word}" %></li>
      <% end %>
    </ul>
  <% else %>
    <p><%= t("search.nothing_found") %></p>
  <% end %>
</turbo-frame>
